; Force installation of optional dependencies and platform-specific binaries
optional=false
force=true
fund=false
audit=false
update-notifier=false
progress=false

; Resolve platform-specific packages
target_platform=linux
target_arch=x64
target_libc=glibc

; Package resolution settings
prefer-offline=false
package-lock=true
save-exact=false
strict-peer-deps=false

; Registry settings
registry=https://registry.npmjs.org/
always-auth=false

; Build optimization
node-options=--max_old_space_size=4096