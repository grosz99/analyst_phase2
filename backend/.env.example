# Snowflake Connection Configuration
# Get these values from your Snowflake account
SNOWFLAKE_USER=your_snowflake_username
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_WAREHOUSE=your_warehouse_name
SNOWFLAKE_DATABASE=your_database_name
SNOWFLAKE_SCHEMA=your_schema_name

# Optional Snowflake Settings
SNOWFLAKE_ROLE=your_role_name
SNOWFLAKE_REGION=your_region

# OpenAI GPT-4.1 API Configuration (Primary AI Backend)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Migration Note: Replaced Anthropic Claude with OpenAI GPT-4.1
# Benefits: Function calling, structured outputs, advanced reasoning, agent orchestration

# Redis Configuration (for data caching)
# Default local Redis setup - modify if using external Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security Settings
SECRET_KEY=your_secret_key_for_jwt_tokens
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Cache Settings
DATASET_CACHE_TTL=3600  # 1 hour in seconds
QUERY_CACHE_TTL=1800    # 30 minutes in seconds

# Performance Settings
MAX_QUERY_ROWS=50000
QUERY_TIMEOUT=300  # 5 minutes in seconds
MAX_CONCURRENT_QUERIES=10

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=false
SENTRY_DSN=  # Optional: for error tracking